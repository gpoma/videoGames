{% extends 'base.html.twig' %}
{% block jsbefore %}
<script src="/js/lib/jquery-3.2.1.min.js"></script>
<script src="/js/lib/isautoplay.js"></script>
{% endblock %}
{% block body %}
{% if not navigator %}
<script>
// isAutoplaySupported(function(supported) {
//   if (!supported) {
//     window.location = window.location.origin + "/mobile?navigator=true";
//   }
// });
</script>
{% endif %}
<div class="theme-showcase" role="main">
  <div class="row">
    <div class="col-xs-12 entete-mobile" style="margin-bottom:30px; background-color:#000; font-size: 20px;">
      <h1>VIDEO-JEUX {{ navigator }}</h1>
      <p><span style="font-style: italic;"><strong>Une expériences vidéo ludiques</span></strong></p>
      {% if navigator %}
          <p>Veuillez utiliser Chrome pour une expérience complète</p>
          <p><a href="market://details?id=com.android.chrome"><img src="{{ asset('chrome_icon.png') }}" style="width: 64px;" aria-hidden="true" alt="Couverture" itemprop="image"></a></p>
      {% endif %}
    </div>
  </div>
{% for game in games %}
{% if game.visible and game.active %}
{% if not navigator %}
    <a href="{{ path('mobile_game', { idName : game.shortName }) }}" data-name="{{ game.name }}" data-shortname="{{ game.shortname }}" class="no-cookie">
{% endif %}
  <div class="row" style="margin-bottom:30px; border:5px solid black;">
    <div class="col-xs-8 padding-0">
      <img src="{{ asset('bundles/videogame/images/'~game.shortName~'_lien.png') }}" class="img-responsive" style="width:100%;" >
    </div>
    <div class="col-xs-4 padding-0" style="background-color:000;" >
      <div class="col-xs-12">
          <div class="hide-on-landscape">
            {% autoescape %}
              <h4 style="font-size: 14px; color: white !important;"><strong>{{ game.name|raw }}</strong></h4>
              <span class="btn btn-default btn-xs">Jouer&nbsp;<span class="glyphicon glyphicon-play text-success"></span></span>
            {% endautoescape %}
          </div>
          <div class="hide-on-portrait">
            {% autoescape %}
              <div style="font-size: 14px; color: white !important;">{{ game.mobileDescription|raw }}</div>
              <span class="btn btn-default btn-xs">Jouer&nbsp;<span class="glyphicon glyphicon-play text-success"></span></span>
            {% endautoescape %}
          </div>
      </div>
    </div>
    </div>
{% if not navigator %}
  </a>
{% endif %}
{% endif %}
{% endfor %}
</div>
<script src="/js/index.js"></script>
{% endblock %}


{% block stylesheetsplus %}
<link rel="stylesheet"  type="text/css" media="all" href="{{ asset('/css/index.css') }}" />
{% endblock %}
